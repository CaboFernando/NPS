
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap core CSS     -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="~/Content/css/animate.min.css" rel="stylesheet" />

    <!--  Light Bootstrap Table core CSS    -->
    <link href="~/Content/css/light-bootstrap-dashboard.css" rel="stylesheet" />

    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="~/Content/css/demo.css" rel="stylesheet" />
    <!--  CSS for Data Table     -->
    <link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />



    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css' />
    <link href="~/Content/css/pe-icon-7-stroke.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>



</head>
<body>
    @*<h1>http://www.creative-tim.com/
              http://www.creative-tim.com/product/light-bootstrap-dashboard
        </h1>*@

    <div class="wrapper">
        <div class="sidebar" data-color="blue" data-image="/Content/img/sidebar-4.jpg">
            <!--

                Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
                Tip 2: you can also add an image using data-image tag

            -->
            <div class="sidebar-wrapper">
                <div class="logo" style="background-color:rgba(248,248,248,.7)">
                    <a href="" class="simple-text">
                        <img src="~/Content/img/sorriso2.png" width="100px" height="100px" />
                    </a>
                </div>
                <ul class="nav">
                    @*<li class="active">*@
                    <li class="@ViewBag.IndexActive">
                        <a href="/Home/Index">
                            <i class="pe-7s-graph"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                   
                    <li class="@ViewBag.AvaliationActive">
                        <a href="/Home/Avaliation">
                            <i class="pe-7s-note2"></i>
                            <p>Avaliações</p>
                        </a>
                    </li>
                    <li class="@ViewBag.CustomerActive">
                        <a href="/Home/Customers">
                            <i class="pe-7s-portfolio"></i>
                            <p>Clientes</p>
                        </a>
                    </li>
                    <li class="@ViewBag.QuestionActive">
                        <a href="/Home/Question">
                            <i class="pe-7s-note2"></i>
                            <p>Perguntas</p>
                        </a>
                    </li>
                    <li>
                        <a href="/Users/Logoff">
                            <i class="pe-7s-power"></i>
                            <p>Sair</p>
                        </a>
                    </li>
                    
                    <li class="active-pro">
                        <a href="https://github.com/cigolrof"  target="_blank">
                            <i class="pe-7s-smile"></i>
                            <p>&copy; Cigolrof 2017</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">@ViewBag.Title</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        
                        
                    </div>
                </div>
            </nav>

            @RenderBody()

        </div>

    </div>

    @if (ViewBag.Title == "Clientes")
    {
        @Html.Partial("ModalCustomer")
    }
    @if (ViewBag.Title == "Area")
    {
        @Html.Partial("ModalArea")
    }
    @if (ViewBag.Title == "Avaliações")
    {
        @*@Html.Partial("ModalAvaliableClients")*@
        @Html.Partial("ModalEvaluation")
        
    }
    @if (ViewBag.Title == "Perguntas") {
        @Html.Partial("ModalQuestion")
    }


</body>

<!--   Core JS Files   -->
<script src="~/Content/js/jquery-1.10.2.js" type="text/javascript"></script>
<script src="~/Content/js/bootstrap.min.js" type="text/javascript"></script>
<!--  Checkbox, Radio & Switch Plugins -->
<script src="~/Content/js/bootstrap-checkbox-radio-switch.js"></script>
<!--  Charts Plugin -->
<script src="~/Content/js/chartist.min.js"></script>
<!--  Notifications Plugin    -->
<script src="~/Content/js/bootstrap-notify.js"></script>
<!--  Google Maps Plugin    -->
<script type="~/text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
<!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
<script src="~/Content/js/light-bootstrap-dashboard.js"></script>
<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
<script src="~/Content/js/demo.js"></script>
<!-- JS from Data Tables -->
<script src="~/Content/js/jquery.dataTables.min.js"></script>
<!-- My own Functions in JS -->
<script src="~/Content/js/functions.js"></script>

<script>
  

</script>
</html>
